{
  "private": true,
  "type": "module",
  "name": "@espimarisa/hibiki-db",
  "version": "2.0.0-alpha",
  "description": "The database client for Hibiki.",
  "license": "zlib",
  "author": "Espi Marisa <contact@espi.me> (https://espi.me)",
  "homepage": "https://github.com/espimarisa/hibiki#readme",
  "packageManager": "pnpm@8.7.4",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/espimarisa/hibiki.git"
  },
  "bugs": {
    "url": "https://github.com/espimarisa/hibiki/issues"
  },
  "engines": {
    "node": ">=20.6.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "clean": "rimraf ./dist/",
    "build": "pnpm clean && pnpm db:generate && tsc && tsc-alias",
    "lint": "tsc --noEmit && pnpm db:generate &&  prettier --c . && eslint . && prisma-lint",
    "db:generate": "prisma generate",
    "db:push": "prisma db push --skip-generate",
    "db:reset": "prisma migrate reset",
    "test": "pnpm lint"
  },
  "dependencies": {
    "@prisma/client": "^5.2.0"
  },
  "devDependencies": {
    "prisma": "^5.2.0",
    "prisma-lint": "^0.0.20"
  }
}
