{
  "type": "module",
  "private": "true",
  "name": "@espimarisa/hibiki-bot",
  "version": "6.0.0-alpha",
  "description": "A Discord bot jam-packed with useful utilities for everyone!",
  "license": "zlib",
  "author": "Espi Marisa <espi@riseup.net> (https://espi.me)",
  "homepage": "https://github.com/espimarisa/hibiki#readme",
  "packageManager": "pnpm@8.0.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/espimarisa/hibiki.git"
  },
  "bugs": {
    "url": "https://github.com/espimarisa/hibiki/issues"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "build": "pnpm prisma:generate && tsc",
    "clean": "rimraf ./dist",
    "dev": "concurrently \"pnpm prisma:push\" \"cross-env NODE_ENV=development tsx ./src/index.ts\"",
    "lint": "prettier --c . && eslint . && pnpm prisma:lint",
    "prisma:generate": "prisma generate",
    "prisma:lint": "prisma-lint",
    "prisma:push": "prisma db push",
    "prisma:reset": "prisma migrate reset",
    "start": "pnpm build && pnpm prisma:push && cross-env NODE_ENV=production node --no-warnings ../../dist/bot/src/index.js",
    "test": "pnpm lint && pnpm build"
  },
  "dependencies": {
    "@discordjs/rest": "^1.7.1",
    "@prisma/client": "^5.0.0",
    "@sentry/node": "^7.60.1",
    "cross-env": "^7.0.3",
    "discord-api-types": "^0.37.50",
    "discord.js": "^14.11.0",
    "dotenv": "^16.3.1",
    "prisma": "^5.0.0"
  },
  "devDependencies": {
    "prisma-lint": "^0.0.18"
  },
  "optionalDependencies": {
    "erlpack": "github:discord/erlpack",
    "eventemitter3": "^5.0.1",
    "sodium-native": "^4.0.4",
    "zlib-sync": "^0.1.8"
  }
}
