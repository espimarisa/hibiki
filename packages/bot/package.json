{
  "private": true,
  "type": "module",
  "name": "@espimarisa/hibiki-bot",
  "version": "6.0.0-alpha",
  "description": "A Discord bot jam-packed with useful utilities for everyone!",
  "license": "zlib",
  "author": "Espi Marisa <contact@espi.me> (https://espi.me)",
  "homepage": "https://github.com/espimarisa/hibiki#readme",
  "packageManager": "pnpm@8.0.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/espimarisa/hibiki.git"
  },
  "bugs": {
    "url": "https://github.com/espimarisa/hibiki/issues"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "prisma": {
    "schema": "../../prisma/schema.prisma"
  },
  "scripts": {
    "clean": "rimraf ./dist",
    "build": "pnpm clean && pnpm prisma:generate && tsc && tsc-alias",
    "dev": "pnpm prisma:push && cross-env NODE_ENV=development tsx ./src/index.ts",
    "lint": "cross-env prettier --c . && eslint . && pnpm prisma:lint",
    "prisma:generate": "cross-env dotenv -e '../../.env' -- prisma generate",
    "prisma:lint": "cross-env dotenv -e '../../.env' -- prisma-lint ../../prisma/schema.prisma",
    "prisma:push": "cross-env dotenv -e '../../.env' -- prisma db push",
    "prisma:reset": "cross-env dotenv -e '../../.env' -- prisma migrate reset",
    "start": "pnpm build && pnpm prisma:push && cross-env NODE_ENV=production node --no-warnings ../../dist/packages/bot/src/index.js",
    "test": "pnpm lint && pnpm build"
  },
  "dependencies": {
    "@discordjs/rest": "^2.0.1",
    "@prisma/client": "^5.1.1",
    "cross-env": "^7.0.3",
    "discord-api-types": "^0.37.54",
    "discord.js": "^14.13.0",
    "dotenv": "^16.3.1",
    "prisma": "^5.1.1"
  },
  "devDependencies": {
    "dotenv-cli": "^7.3.0",
    "prisma-lint": "^0.0.19"
  },
  "optionalDependencies": {
    "erlpack": "github:discord/erlpack",
    "eventemitter3": "^5.0.1",
    "sodium-native": "^4.0.4",
    "zlib-sync": "^0.1.8"
  }
}
