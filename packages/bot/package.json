{
  "private": true,
  "type": "module",
  "name": "@espimarisa/hibiki-bot",
  "version": "6.0.0-alpha",
  "description": "A Discord bot jam-packed with useful utilities for everyone!",
  "license": "zlib",
  "author": "Espi Marisa <contact@espi.me> (https://espi.me)",
  "homepage": "https://github.com/espimarisa/hibiki#readme",
  "packageManager": "pnpm@8.0.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/espimarisa/hibiki.git"
  },
  "bugs": {
    "url": "https://github.com/espimarisa/hibiki/issues"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "clean": "rimraf ./dist",
    "build": "pnpm clean && tsc && tsc-alias",
    "dev": "cross-env NODE_ENV=development tsx ./src/index.ts",
    "lint": "tsc --noEmit && prettier --c . && eslint .",
    "start": "pnpm build && cross-env NODE_ENV=production node --no-warnings ./dist/packages/bot/src/index.js",
    "test": "pnpm lint"
  },
  "dependencies": {
    "@discordjs/rest": "^2.0.1",
    "cross-env": "^7.0.3",
    "discord-api-types": "^0.37.55",
    "discord.js": "^14.13.0",
    "dotenv": "^16.3.1"
  },
  "optionalDependencies": {
    "erlpack": "github:discord/erlpack",
    "eventemitter3": "^5.0.1",
    "sodium-native": "^4.0.4",
    "zlib-sync": "^0.1.8"
  }
}
