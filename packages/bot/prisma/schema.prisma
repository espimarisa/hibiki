// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Database options
datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Guild configs
model GuildConfig {
  // The guild's ID
  guild_id String @id

  // The custom locale set for all new guild members to use
  locale String? @unique
}

// User configs
model UserConfig {
  // The user's ID
  user_id String @id

  // The custom locale set for use by the user
  locale String? @unique
}
