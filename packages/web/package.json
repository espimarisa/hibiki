    "@sveltejs/kit": "^2.5.2",
    "eslint": "^8.57.0",
    "eslint-plugin-svelte": "^2.35.1",
    "postcss": "^8.4.35",
    "sass": "^1.71.1",
    "svelte": "^4.2.12",
    "svelte-check": "^3.6.6",
    "svelte-eslint-parser": "^0.33.1",
    "vite": "^5.1.4"
  }
