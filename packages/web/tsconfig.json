{
  "extends": ["./.svelte-kit/tsconfig.json", "../../tsconfig.json"],
  "include": ["./src/**/*", "../shared/src/typings/*"],

  "rootDirs": ["..", "./types"],

  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "moduleResolution": "NodeNext",
    "noImplicitAny": true,
    "importsNotUsedAsValues": "preserve",
    "verbatimModuleSyntax": false
  }
}
