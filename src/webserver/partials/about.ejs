<%# Stats  %>
<% let useramnt = 0; bot.guilds.forEach(g => { useramnt += g.memberCount; }); %>
<section class="hero is-dark is-bold" id="stats">
  <div class="hero-body">
    <div class="container">
      <div class="columns has-text-centered">
        <div class="column">
          <span class="icon is-large"><i class="fa fa-comment fa-3x"></i></span>
          <p class="subtitle"><%= bot.guilds.size %> servers</p>
        </div>
        <div class="column">
          <span class="icon is-large"><i class="fa fa-users fa-3x"></i></span>
          <p class="subtitle"><%= useramnt %> users</p>
        </div>
        <div class="column">
          <span class="icon is-large"><i class="fa fa-book fa-3x"></i></span>
          <p class="subtitle"><%= bot.commands.length %> commands</p>
        </div>
        <div class="column">
          <span class="icon is-large"><i class="fa fa-signal fa-3x"></i></span>
          <p class="subtitle"><%= bot.shards.get(0).latency %> ms</p>
        </div>
        <div class="column">
          <span class="icon is-large"><i class="fa fa-clock-o fa-3x"></i></span>
          <p class="subtitle"><%= format.uptime(process.uptime()); %></p>
        </div>
      </div>
    </div>
  </div>
</section>

