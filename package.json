{
  "name": "@espimarisa/hibiki-bot",
  "version": "7.0.0-alpha",
  "type": "module",
  "description": "A Discord bot jam-packed with useful utilities, with a focus on user experience and accessibility.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/espimarisa/hibiki.git"
  },
  "homepage": "https://github.com/espimarisa/hibiki#readme",
  "bugs": {
    "url": "https://github.com/espimarisa/hibiki/issues"
  },
  "author": "Espi Marisa <contact@espi.me> (https://espi.me)",
  "license": "zlib",
  "private": true,
  "scripts": {
    "build": "bun run check && bun run db:generate",
    "check": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:push": "prisma db push --skip-generate",
    "db:reset": "prisma migrate reset",
    "dev": "bun run build && NODE_ENV=development bun run --hot ./src/index.ts",
    "format": "prettier --write .",
    "lint": "tsc --noEmit && prettier --c . && eslint . && prisma-lint",
    "start": "bun run build && NODE_ENV=production bun run ./src/index.ts",
    "test": "bun run lint"
  },
  "dependencies": {
    "@prisma/client": "^5.9.1",
    "discord-hybrid-sharding": "^2.1.4",
    "oceanic.js": "^1.9.0",
    "pino": "^8.18.0",
    "pino-pretty": "^10.3.1",
    "zod": "^3.22.4",
    "zod-error": "^1.5.0"
  },
  "devDependencies": {
    "@espimarisa/eslint-config": "^4.2.4",
    "@types/bun": "^1.0.5",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "npm:eslint-plugin-i@^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-security": "^2.1.0",
    "eslint-plugin-unicorn": "^51.0.1",
    "oceanic.js": "^1.9.0",
    "prettier": "^3.2.5",
    "prettier-plugin-pkg": "^0.18.1",
    "prettier-plugin-sh": "^0.14.0",
    "prisma": "^5.9.1",
    "prisma-lint": "^0.1.0",
    "typescript": "^5.3.3"
  }
}
