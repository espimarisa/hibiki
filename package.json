{
  "private": "true",
  "name": "hibiki",
  "version": "3.3.0-alpha",
  "description": "An easy, versatile, and all-in-one Discord bot that does anything your server needs.",
  "author": "Espi <espi@riseup.net> (https://espi.me)",
  "contributors": [
    "resolved <resolvedxd@gmail.com> (https://github.com/resolvedxd)"
  ],
  "license": "AGPL-3.0-or-later",
  "homepage": "https://hibiki.app",
  "main": "dist/src/index.js",
  "bugs": {
    "url": "https://github.com/smolespi/hibiki/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/smolespi/hibiki.git"
  },
  "engines": {
    "npm": ">=6.9.0",
    "node": ">=14.0.0"
  },
  "scripts": {
    "build": "tsc",
    "build:all": "npm run build && npm run build:sass && npm run build:static",
    "build:sass": "cross-env sass ./src/webserver/public/sass/:./src/webserver/public/css/",
    "build:static": "cross-env copyfiles './src/webserver/**/**/*.{css,jpg,png,ejs}' './dist/'",
    "dev": "npm run build:sass && npm run nodemon",
    "format": "cross-env prettier --config .prettierrc 'src/**/*.{css,htm,html,js,json,ts,tsx}' --write",
    "lint": "eslint --fix .",
    "nodemon": "cross-env nodemon --ext 'json,ts,sass,scss' --watch 'src' --delay 5 --ignore 'rethinkdb_data/*' --exec 'cross-env NODE_ENV=development ts-node --files ./src/index.ts'",
    "postbuild": "npm run build:sass && npm run build:static",
    "sass": "sass --watch ./src/webserver/public/sass/:./src/webserver/public/css/",
    "setup": "ts-node --files ./src/scripts/setup.ts",
    "start": "npm run build && cross-env NODE_ENV=production node dist/src/index.js",
    "pm2": "npm run build:all && pm2 start pm2.config.json",
    "test": "tsc && eslint ."
  },
  "dependencies": {
    "@sentry/node": "^6.0.3",
    "canvas": "^2.6.1",
    "cookie-parser": "^1.4.5",
    "csurf": "^1.11.0",
    "dayjs": "^1.10.4",
    "ejs": "^3.1.5",
    "erela.js": "^2.3.2",
    "erela.js-spotify": "^1.2.0",
    "eris": "^0.14.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "helmet": "^4.4.1",
    "passport": "^0.4.1",
    "passport-discord": "^0.1.4",
    "rethinkdb-ts": "^2.4.8",
    "session-rethinkdb-ts": "^1.0.5",
    "terser": "^5.5.1",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@sentry/types": "^6.0.3",
    "@types/cookie-parser": "^1.4.2",
    "@types/csurf": "^1.11.0",
    "@types/express": "4.17.11",
    "@types/express-session": "^1.17.3",
    "@types/node": "^14.14.22",
    "@types/passport-discord": "^0.1.3",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "bulma": "^0.9.2",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "nodemon": "^2.0.7",
    "pm2": "^4.5.2",
    "prettier": "^2.2.1",
    "sass": "^1.32.5",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "optionalDependencies": {
    "@discordjs/opus": "^0.4.0",
    "bufferutil": "^4.0.3",
    "erlpack": "^0.1.3",
    "eventemitter3": "^4.0.7",
    "zlib-sync": "^0.1.7"
  }
}
