{
  "name": "@espimarisa/hibiki",
  "version": "4.0.0-alpha",
  "type": "module",
  "description": "A Discord app providing informational tools and utilities.",
  "author": "Espi Marisa <contact@espi.me> (https://espi.me)",
  "license": "zlib",
  "private": true,
  "packageManager": "bun@1.1.23",
  "scripts": {
    "check": "tsc --noEmit",
    "dev": "NODE_ENV=development bun run --hot ./src/index.ts",
    "lint": "biome check .",
    "lint:fix": "biome check --apply .",
    "start": "NODE_ENV=production bun run ./src/index.ts",
    "test": "bun run check && bun run lint",
    "build": "bun --filter ='@espimarisa/hibiki-bot' build",
    "deps:update": "bunx npm-check-updates --target latest --workspaces --root --upgrade",
    "format": "biome format --write ."
  },
  "dependencies": {
    "tslib": "^2.6.3",
    "@discordjs/rest": "^2.3.0",
    "date-fns": "^3.6.0",
    "discord-api-types": "^0.37.93",
    "discord.js": "^14.15.3",
    "i18next": "^23.12.3",
    "i18next-fs-backend": "^2.3.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "bun-types": "^1.1.23",
    "typescript": "^5.5.4"
  }
}
