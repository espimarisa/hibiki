{
  "type": "module",
  "private": "true",
  "name": "@sysdotini/hibiki",
  "version": "6.0.0-alpha",
  "description": "A Discord bot jam-packed with useful utilities for everyone!",
  "license": "zlib",
  "author": "Espi Marisa <espi@riseup.net> (https://espi.me)",
  "homepage": "https://github.com/sysdotini/hibiki#readme",
  "packageManager": "pnpm@8.0.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sysdotini/hibiki.git"
  },
  "bugs": {
    "url": "https://github.com/sysdotini/hibiki/issues"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "concurrently \"pnpm prisma:dev\" \"nodemon ./src/index.ts\"",
    "format": "prettier --write './**/**/*.{css,js,json,md,ts,yml}'",
    "prebuild": "cross-env rimraf ./dist/",
    "preinstall": "npx -y only-allow pnpm",
    "prisma:dev": "prisma db push",
    "prisma:dev:reset": "prisma db push",
    "prisma:prod": "prisma db push",
    "start": "pnpm build && pnpm prisma:prod && cross-env NODE_ENV=production node --no-warnings ./dist/index.js",
    "test": "prisma generate && tsc --noEmit && eslint . && prettier --c ."
  },
  "dependencies": {
    "@prisma/client": "^4.13.0",
    "@projectdysnomia/dysnomia": "^0.1.1",
    "@sentry/node": "^7.49.0",
    "discord-api-types": "^0.37.39",
    "discord-hybrid-sharding": "^2.1.2",
    "dotenv": "^16.0.3",
    "envalid": "^7.3.1",
    "pg": "^8.10.0",
    "pino": "^8.11.0",
    "pino-pretty": "^10.0.0"
  },
  "devDependencies": {
    "@sysdotini/eslint-config": "^3.1.3",
    "@types/node": "^18.15.12",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "concurrently": "^8.0.1",
    "cross-env": "^7.0.3",
    "eslint-import-resolver-typescript": "^3.5.5",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.7",
    "prisma": "^4.13.0",
    "rimraf": "^5.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}
