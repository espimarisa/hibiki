{
  "private": true,
  "type": "module",
  "name": "@espimarisa/hibiki",
  "version": "6.0.0-alpha",
  "description": "A Discord bot jam-packed with useful utilities for everyone!",
  "license": "zlib",
  "author": "Espi Marisa <contact@espi.me> (https://espi.me)",
  "homepage": "https://github.com/espimarisa/hibiki#readme",
  "packageManager": "pnpm@8.7.4",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/espimarisa/hibiki.git"
  },
  "bugs": {
    "url": "https://github.com/espimarisa/hibiki/issues"
  },
  "workspaces": [
    "./packages/"
  ],
  "engines": {
    "node": ">=20.6.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "build": "pnpm dotenv -- turbo run build",
    "dev": "pnpm dotenv -- turbo run dev",
    "dev:bot": "pnpm dotenv -- turbo run dev --filter=@espimarisa/hibiki-bot --filter=@espimarisa/hibiki-db",
    "dev:web": "pnpm dotenv -- turbo run dev --filter=@espimarisa/hibiki-web --filter=@espimarisa/hibiki-db",
    "deps:update": "pnpm up -r -L",
    "format": "prettier --write .",
    "lint": "pnpm dotenv -- turbo run lint",
    "start": "pnpm dotenv -- turbo run start",
    "start:bot": "pnpm dotenv -- turbo run start --filter=@espimarisa/hibiki-bot --filter=@espimarisa/hibiki-db",
    "start:web": "pnpm dotenv -- turbo run start --filter=@espimarisa/hibiki-web --filter=@espimarisa/hibiki-db",
    "test": "pnpm dotenv -- turbo run test"
  },
  "dependencies": {
    "tslib": "^2.6.2"
  },
  "devDependencies": {
    "@espimarisa/eslint-config": "^4.1.6",
    "@types/node": "^20.6.0",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "npm:eslint-plugin-i@^2.28.1",
    "eslint-plugin-n": "^16.0.2",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-unicorn": "^48.0.1",
    "prettier": "^3.0.3",
    "prettier-plugin-svelte": "^3.0.3",
    "rimraf": "^5.0.1",
    "tsc-alias": "^1.8.7",
    "tsx": "^3.12.8",
    "turbo": "^1.10.13",
    "typescript": "^5.2.2"
  }
}
