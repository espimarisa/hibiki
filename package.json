{
  "type": "module",
  "private": "true",
  "name": "@espimarisa/hibiki",
  "version": "6.0.0-alpha",
  "description": "A Discord bot jam-packed with useful utilities for everyone!",
  "license": "zlib",
  "author": "Espi Marisa <espi@riseup.net> (https://espi.me)",
  "homepage": "https://github.com/espimarisa/hibiki#readme",
  "packageManager": "pnpm@8.0.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/espimarisa/hibiki.git"
  },
  "bugs": {
    "url": "https://github.com/espimarisa/hibiki/issues"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "concurrently \"pnpm prisma:push\" \"cross-env NODE_ENV=development tsx ./src/index.ts\"",
    "format": "prettier --write './**/**/*.{js,json,md,ts,yml}'",
    "prebuild": "rimraf ./dist/",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "prisma:reset": "prisma migrate reset",
    "start": "pnpm build && pnpm prisma:push && cross-env NODE_ENV=production node --no-warnings ./dist/index.js",
    "test": "pnpm prisma:generate && tsc --noEmit && eslint . && prettier --c ."
  },
  "dependencies": {
    "@discordjs/rest": "^1.7.1",
    "@prisma/client": "^5.0.0",
    "@sentry/node": "^7.59.3",
    "cross-env": "^7.0.3",
    "discord-api-types": "^0.37.50",
    "discord.js": "^14.11.0",
    "dotenv": "^16.3.1",
    "envalid": "^7.3.1",
    "i18next": "^23.2.11",
    "pino": "^8.14.1",
    "pino-pretty": "^10.0.1",
    "tsx": "^3.12.7"
  },
  "optionalDependencies": {
    "erlpack": "github:discord/erlpack",
    "eventemitter3": "^5.0.1",
    "sodium-native": "^4.0.4",
    "zlib-sync": "^0.1.8"
  },
  "devDependencies": {
    "@types/node": "^20.4.2",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-unicorn": "^47.0.0",
    "prettier": "^3.0.0",
    "prisma": "^5.0.0",
    "rimraf": "^5.0.1",
    "typescript": "^5.1.6"
  }
}
