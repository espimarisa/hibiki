{
  "$schema": "https://turbo.build/schema.json",
  "globalDotEnv": [".env"],
  "pipeline": {
    "build": {
      "dependsOn": ["db:generate", "^build"],
      "outputs": ["dist/**", ".svelte-kit/**"]
    },
    "deploy": {
      "dependsOn": ["build"]
    },
    "dev": {
      "dependsOn": ["db:generate", "db:push"],
      "cache": false,
      "persistent": true
    },
    "start": {
      "dependsOn": ["db:push", "deploy"],
      "cache": true,
      "persistent": true
    },
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "lint": {},
    "test": {
      "dependsOn": ["db:generate"]
    }
  }
}
