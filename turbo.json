{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["db:generate", "^build"],
      "outputs": [".dist/**", ".next/**"]
    },
    "deploy": {
      "dependsOn": ["lint", "build"]
    },
    "dev": {
      "dependsOn": ["db:push"],
      "cache": false,
      "persistent": true
    },
    "start": {
      "dependsOn": ["db:push", "deploy"],
      "cache": true,
      "persistent": true
    },
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "lint": {},
    "test": {}
  }
}
