{
  "$schema": "https://biomejs.dev/schemas/1.6.3/schema.json",

  "files": {
    "ignore": ["**/node_modules/*", "**/dist/*"],
    "ignoreUnknown": true
  },
  "formatter": {
    "ignore": ["**/node_modules/*", "**/dist/*"],
    "enabled": true,
    "formatWithErrors": true,
    "lineWidth": 120,
    "indentStyle": "space"
  },
  "linter": {
    "ignore": ["**/node_modules/*", "**/dist/*"],
    "enabled": true,
    "rules": {
      "all": true,
      "style": {
        "useFilenamingConvention": "off",
        "useNamingConvention": "off",
        "noParameterProperties": "off"
      }
    }
  },
  "organizeImports": {
    "ignore": ["**/node_modules/*", "**/dist/*"],
    "enabled": true
  },
  "javascript": {
    "globals": ["Bun"]
  },
  "json": {
    "parser": {
      "allowComments": true
    }
  }
}
